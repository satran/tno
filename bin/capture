#!/bin/sh

dir=$HOME/txt/capture
if ! [ -e $TXT ]; then
    dir=$TXT/capture
fi
if ! [ -e $dir ]; then
    mkdir -p "$dir"
fi

file=${dir}/$(< /dev/urandom tr -dc A-Z-a-z-0-9 | head -c${1:-10};echo;)

printf "> "
while read input
do
    echo $input >> $file
done <&0 
echo $(date +%x%n%X) >> $file

echo "captured to $file"
